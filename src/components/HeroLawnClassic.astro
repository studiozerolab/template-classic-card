---
import { hero } from "../config/site";
import { Image } from "astro:assets";

// Import images directly (BEST PRACTICE)
// Replace these with your actual file names in /src/assets/
import heroMain from "../assets/cutLawnLow.jpg";
import heroBed from "../assets/mower.jpg";
import heroHedges from "../assets/lawnTracks.jpg";
---

<section
  class="
    w-full
    py-16 md:py-24
    bg-[color:var(--color-bg)]
  "
>
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">

    <!-- HERO CARD -->
    <div
      class="
        bg-[color:var(--color-surface)]
        text-[color:var(--color-text)]
        shadow-xl
        rounded-2xl
        p-8 md:p-12
        flex flex-col md:flex-row
        gap-10
        items-center md:items-start
      "
    >

      <!-- LEFT -->
      <div class="flex-1 flex flex-col gap-5">
        <p class="text-sm font-semibold tracking-wide text-[color:var(--color-accent)]">
          {hero.label}
        </p>

        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold leading-tight">
          {hero.heading}
        </h1>

        <p class="text-base sm:text-lg leading-relaxed opacity-90">
          {hero.subheading}
        </p>

        <!-- Trust chips -->
        <div class="flex flex-wrap gap-2 pt-1">
          {hero.trustChips.map((chip) => (
            <span
              class="
                px-3 py-1
                text-sm font-medium
                rounded-full
                bg-[color:var(--color-accent-tint)]
                text-[color:var(--color-accent)]
              "
            >
              {chip}
            </span>
          ))}
        </div>

        <!-- CTA -->
        <div class="flex flex-wrap gap-3 pt-4">
          <a
            href={hero.primaryCtaHref}
            class="
              inline-block
              px-6 py-3
              rounded-full
              font-semibold
              bg-[color:var(--color-primary)]
              text-[color:var(--color-primary-contrast)]
              hover:opacity-90
              transition
            "
          >
            {hero.primaryCtaLabel}
          </a>

          <a
            href={hero.secondaryCtaHref}
            class="
              inline-block
              px-6 py-3
              rounded-full
              font-semibold
              border
              bg-[color:var(--color-surface)]
              text-[color:var(--color-primary)]
              border-[color:var(--color-primary)]
              hover:bg-[color:var(--color-primary-tint)]
              transition
            "
          >
            {hero.secondaryCtaLabel}
          </a>
        </div>
      </div>

      <!-- RIGHT: PHOTO COLLAGE -->
      <div class="flex-1 w-full flex justify-center md:justify-end">
        <div class="grid grid-cols-2 gap-3 max-w-xs sm:max-w-sm">

          <!-- Large main image -->
          <div class="col-span-2 row-span-2 rounded-xl overflow-hidden relative w-full aspect-[4/3]">
            <Image
              src={heroMain}
              alt={hero.heroImages[0].alt}
              class="inset-0 h-full w-full object-cover"
            />
          </div>

          <div class="rounded-xl overflow-hidden relative w-full aspect-[4/3]">
            <Image
              src={heroBed}
              alt={hero.heroImages[1].alt}
              class="inset-0 h-full w-full object-cover"
            />
          </div>

          <div class="rounded-xl overflow-hidden relative w-full aspect-[4/3]">
            <Image
              src={heroHedges}
              alt={hero.heroImages[2].alt}
              class="rounded-xl inset-0 h-full w-full object-cover"
            />
          </div>
        </div>
      </div>

    </div>

    <!-- Quick Services -->
    <p
      class="
        text-center
        mt-10
        text-sm sm:text-base
        font-medium
        text-[color:var(--color-text-muted)]
      "
    >
      {hero.quickServicesLine}
    </p>

  </div>
</section>
