---
import { process } from "../config/site";
---

<div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
  <div
    class="
      rounded-2xl
      bg-[color:var(--color-alt)]
      text-[color:var(--color-text)]
      border border-[color:var(--color-strong)]
      p-8 md:p-10
    "
  >
    <header class="max-w-2xl mb-8">
      <h2 class="text-2xl sm:text-3xl font-bold mb-3">
        {process.heading}
      </h2>
      {process.intro && (
        <p class="text-base leading-relaxed text-[color:var(--color-text-muted)]">
          {process.intro}
        </p>
      )}
    </header>

    <ol class="grid gap-6 md:grid-cols-3">
      {process.steps.map((step, index) => (
        <li
          class="
            flex flex-col gap-3
            rounded-xl
            bg-[color:var(--color-surface)]
            border border-[color:var(--color-mid)]
            p-5
            shadow-sm
          "
        >
          <div class="flex items-center gap-3">
            <span
              class="
                inline-flex h-8 w-8 flex-shrink-0
                items-center justify-center
                rounded-full
                bg-[color:var(--color-primary-tint)]
                text-[color:var(--color-primary)]
                text-sm font-semibold
              "
            >
              {index + 1}
            </span>
            <h3 class="text-base font-semibold">
              {step.title}
            </h3>
          </div>
          <p class="text-sm leading-relaxed text-[color:var(--color-text-muted)]">
            {step.description}
          </p>
        </li>
      ))}
    </ol>
  </div>
</div>
