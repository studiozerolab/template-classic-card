---
import { branding } from "../config/site";
import { Image } from "astro:assets";

// OPTIONAL: import a small footer logo if desired.
// import logoSmall from "../assets/logo-small.png";

const hasFooterLogo = false; // set true if you import logoSmall above
---

<footer
  class="
    w-full
    border-t border-[color:var(--color-strong)]
    bg-[color:var(--color-surface)]
    text-[color:var(--color-text-muted)]
    text-sm
  "
>
  <div
    class="
      mx-auto max-w-6xl
      px-4 sm:px-6 lg:px-8
      py-6
      flex flex-col gap-4
      sm:flex-row sm:items-center sm:justify-between
    "
  >
    <!-- LEFT: LOGO / NAME + COPYRIGHT -->
    <div class="flex items-center gap-3">
      {hasFooterLogo && (
        <Image
          src={logoSmall}
          alt={branding.businessName}
          class="h-8 w-auto"
        />
      )}
      <div class="flex flex-col">
        <span class="font-semibold text-[color:var(--color-text)]">
          {branding.businessName}
        </span>
        <span>
          &copy; {new Date().getFullYear()} {branding.businessName}. All rights reserved.
        </span>
      </div>
    </div>

    <!-- RIGHT: SMALL CREDITS / LINK -->
    <div class="flex flex-wrap items-center gap-2 justify-start sm:justify-end">
      <span>Website by</span>
      <a
        href="https://studiozerolab.com"
        class="font-semibold text-[color:var(--color-text)] hover:underline"
      >
        STUDIÃ˜
      </a>
    </div>
  </div>
</footer>
