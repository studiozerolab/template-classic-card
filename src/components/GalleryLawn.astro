---
import { gallery } from "../config/site";
import { Image } from "astro:assets";

// Import each gallery image explicitly
// Replace these imports to match your actual filenames
import g1 from "../assets/patioLiving.jpg";
import g2 from "../assets/poolLiving.jpg";
import g3 from "../assets/gardenPath.jpg";
import g4 from "../assets/estateStairs.jpg";
import g5 from "../assets/apartmentPath.jpg";
import g6 from "../assets/placeHolder.jpg";

const images = [g1, g2, g3, g4, g5, g6];
---

<div class="max-w-6xl px-4 sm:px-6 lg:px-8">
  <header class="max-w-2xl mb-8">
    <h2 class="text-2xl sm:text-3xl font-bold mb-3">
      {gallery.heading}
    </h2>

    {gallery.intro && (
      <p class="text-base leading-relaxed text-[color:var(--color-text-muted)]">
        {gallery.intro}
      </p>
    )}
  </header>

  <div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-3">
    {images.map((img, i) => (
      <figure
        class="
          rounded-xl
          overflow-hidden
          bg-[color:var(--color-surface)]
          border border-[color:var(--color-mid)]
          shadow-sm
        "
      >
        <div class="relative w-full aspect-[4/3]">
          <Image
            src={img}
            alt={gallery.items[i].alt}
            class="absolute inset-0 w-full h-full object-cover"
        />
        </div>
      </figure>
    ))}
  </div>
</div>
