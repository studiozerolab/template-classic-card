---
import "../styles/global.css";


import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SEOHead from "../layouts/SEOHead.astro";
---

<html lang="en">
  <head>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Open+Sans:wght@400;600&display=swap"
      rel="stylesheet"
    />

    <SEOHead />
  </head>

  <body
    class="
      font-body
      bg-[color:var(--color-bg)]
      text-[color:var(--color-text)]
      antialiased
    "
  >
    <Header />

    <!-- std-container defined by you (max-w + px) -->
    <main class="std-container">
      <slot /> <!-- page content goes here -->
    </main>

    <Footer />
  </body>
</html>

